<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg">

    <ImageView
        android:id="@+id/login_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/splash_logo_login"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_picture">

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/lbs_popup_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:drawableLeft="@drawable/icon_name"
                android:drawablePadding="6dp"
                android:hint="用户名"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="#000"
                android:textColorHint="#ccc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCED2" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="6dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:paddingTop="3dp"
                android:textColor="#000"
                android:textColorHint="#ccc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCED2" />

            <EditText
                android:id="@+id/et_repass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="6dp"
                android:hint="重复密码"
                android:inputType="textPassword"
                android:padding="5dp"
                android:paddingTop="3dp"
                android:textColor="#000"
                android:textColorHint="#ccc" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ll_user_info"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_reg"
            android:text="注       册"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/btn_register"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login"
            android:text="已有账号？立即登录"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>
